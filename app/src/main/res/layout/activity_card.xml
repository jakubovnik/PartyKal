<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardActivity">

  <TextView
      android:id="@+id/tv_points"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="error"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btn_add_ten_points"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="addTenPoints"
      android:text="add 10 points"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_points" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toTopOf="@+id/btn_add_ten_points"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_points">
      <TextView
          android:id="@+id/tv_card_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="error"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/tv_card_description"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="error"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tv_card_name" />

      <TextView
          android:id="@+id/tv_card_points"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="error"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tv_card_description" />

  </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_randomize_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="randomize"
        android:onClick="changeCardBtn"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_ten_points"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>